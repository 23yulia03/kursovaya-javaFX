<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" prefHeight="500.0" prefWidth="399.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gamefx2.MainMenuController">
    <!-- Заголовок правил игры -->
    <Label text="Правила игры" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Правила игры -->
    <Label fx:id="rulesLabel" style="-fx-font-size: 14px; -fx-padding: 10px;" />

    <!-- Выбор уровня игры -->
    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 18px;" text="Выберите уровень игры:" />
        <ComboBox fx:id="difficultyComboBox" style="-fx-font-size: 16px;" prefWidth="150.0" />
    </HBox>

    <!-- Кнопка для начала игры -->
    <Button fx:id="startButton" onAction="#startGame" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Начать игру" />
</VBox>